.activity-stream-container
	position: relative
	width: inherit

.activity-stream-container:before
	display: block
	content: ""
	position: absolute
	top: 0
	bottom: 0
	//left: 79px;
	left: 23px
	width: 2px
	background-color: #F3F3F3
	z-index: -1

.activity
	position: relative
	padding-left: 64px
	padding-bottom: 20px
	margin-top: 25px
	margin-bottom: 25px
	//border-top: 2px solid #FFF;
	//border-bottom: 2px solid #FFF;

.activity .icon
	float: left
	margin-left: -64px
	border-radius: 48px
	width: 48px
	height: 48px
	background-color: #F7F7F7

.activity .icon i
	color: #777
	font-size: 24px
	margin-top: 12px
	margin-left: 14px
	display: inline-block
	line-height: 24px
	text-align: center
	vertical-align: baseline

.activity .body:before
	border-right-color: #DDD
	border-width: 8px

.activity .body:after
	border-width: 7px
	border-right-color: #F7F7F7
	margin-top: 1px
	margin-left: 2px

.activity .body
	background: #FFF
	min-height: 50px

.activity .footer
	font-family: 'lucida grande', tahoma, verdana, arial, sans-serif
	font-size: 11px
	font-weight: normal
	margin-top: 6px

// New Activity block
.activity.new input.title
	font-size: 16px
	border: none
	border-radius: 0
	margin-bottom: 10px
	width: 100%
	box-shadow: none
	transition: none
	padding-left: 0

.activity.new textarea.content
	min-height: 100px
