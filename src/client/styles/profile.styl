picture-radius = 3px

.sl-profile
	margin-top: -70px
	margin-bottom: 50px
	background: #fff
	border-radius: picture-radius
	border: 1px solid #e9e9e9;
	border-bottom: 2px solid rgba(0,0,0,.07);
	border-bottom-width: 2px

.sl-profile .picture
	background: no-repeat center center
	background-image: url('')
	background-size: cover
	height: 100px
	width: 100px
	border-radius: picture-radius 0 0 picture-radius

.sl-profile h4
	font-weight: lighter
	margin-bottom: 4px

.sl-profile p.slug
	color: #888

.sl-profile .social-media ul
	list-style: none
	margin: 0
	padding: 0

.sl-profile .social-media ul.social-bar
	float: left

.sl-profile .social-media ul li
	margin-right: 10px
	display: inline-block

.sl-profile .social-media i
	color: #949494
	font-size: 24px
	transition: color 0.25s ease-in
	-webkit-transition: color 0.25s ease-in

.sl-profile .social-media a.twitter i:hover
	color: #55acee

.sl-profile .social-media a.github i:hover
	color: #666

.sl-profile .social-media a.facebook i:hover
	color: #3b5998

.sl-profile .social-media a.xing i:hover
	color: #026466

.sl-profile .social-media a.skype i:hover
	color: #00aff0

.sl-profile .social-media a.soundcloud i:hover
	color: #f80

.sl-profile .social-media a.keybase i:hover
	color: #fc8558

.sl-profile .social-media a.mail i:hover
	color: #07d

.sl-profile .command-bar
	display: inline-block
	float: right
